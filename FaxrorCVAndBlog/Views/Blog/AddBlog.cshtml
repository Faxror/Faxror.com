@model EntityLayer.Concrete.Blog
@{
    ViewData["Title"] = "AddBlog";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<form class="forms-sample" method="post">
    <div class="form-group">
        <label for="exampleInputName1">Başlık</label>
        <input type="text" class="form-control" id="exampleInputName1" placeholder="Lütfen Başlık Giriniz" asp-for="BlogTıtle">
    </div>
    <div class="form-group">
        <label for="exampleInputName1">Kategori</label>
        <input type="text" class="form-control" id="exampleInputName1" placeholder="Lütfen Başlık Giriniz" asp-for="CategoryID">
    </div>
    <div class="form-group">
        <label for="exampleInputName1">Tarih</label>
        <input type="date" class="form-control" id="exampleInputName1" placeholder="Lütfen Tarih Giriniz" asp-for="BlogTime">
    </div>
    <div class="form-group">
        <label for="exampleInputName1">Yazar</label>
        <input type="text" class="form-control" id="exampleInputName1" placeholder="Lütfen Tarih Giriniz" asp-for="AuthorID">
    </div>
    <div class="form-group">
        <label for="exampleTextarea1">Açıklama</label>
        <textarea class="form-control" id="exampleTextarea1" rows="4" placeholder="Lütfen Açıklama Giriniz" asp-for="BlogContent"></textarea>
    </div>
    <button type="submit" class="btn btn-outline-primary">Kaydet</button>
    <button class="btn btn-light">Geri Dön</button>
</form>

