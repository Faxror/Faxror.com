
@{
    Layout = null;
}






@model  FaxrorCVAndBlog.Models.PagedResult<DataAccessLayer.Concrete.EntityFramework.EFBlogDal.BlogWithAuthors>
<!-- Diğer kodlar -->

<!DOCTYPE html> 
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!--<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet"> -->
    <link rel="stylesheet" href="~/Faxror.com/css/style.css" type="text/css" media="all" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <title>Yaz Blog Sitesi</title>
</head>
<body>
    <header>
        <h1 class="logo">Yaz Blog</h1>
        <nav class="navbar">
            <!-- <img class="logo" src="image/logo.png" alt="logo"> -->
            <ul class="nav__links">
                <li><a href="/Blog/Index">AnaSayfa</a></li>

            </ul>
        </nav>
        <a class="cta" href="/Default/Index"><button>CV</button></a>
    </header>

    @{

        var prevDisabled = !Model.HasExitPage ? "disabled" : "";
        var nextDisabled = !Model.HasNextPage ? "disabled" : "";

    }
    @if (!ViewBag.IsFirstPage)
    {
        <a asp-action="Index" asp-route-pageNumber="@(Model.PageIndex - 1)" class="btn btn-dark @prevDisabled">
            <div class="exit-container">
                <button class="exit">Geri</button>
            </div>
        </a>
    }


    @if (!ViewBag.isLastPage)
    {
        <a asp-action="Index" asp-route-pageNumber="@(Model.PageIndex + 1)" class="btn btn-dark @nextDisabled">
            <div class="next-container">
                <button class="next">Next</button>
            </div>
        </a>
    }



        <h2 class="last">Son Yazılar</h2>
        <div class="blog-container">
            @foreach (var item in Model)
            {


                <div class="blog-box">
                    <div class="blog-img">
                        <img src="@item.Blog.BlogImage" alt="Blog">
                    </div>
                    <div class="blog-text">
                        <span>@item.Blog.BlogTime.ToString("dd-MMM-yyy") | By @item.Author.AuthorName</span>
                        <a href="#" class="blog-title">@item.Blog.BlogTıtle</a>
                        <p>@item.Blog.BlogContent</p>
                        <a href="/Blog/BlogDetails/@item.Blog.BlogID">Devamını Oku</a>
                    </div>
                </div>


             


            }
        </div>


        <footer class="footer">
            <div class="container">
                <div class="row">
                    <div class="footer-col" id="about">
                        <h4>Hakkımda</h4>
                        <ul>
                            <li>
                                Hakkımda için Lütfen CV`ye gidiniz
                            </li>
                        </ul>

                    </div>
                    <div class="footer-col" id="kısa">
                        <h4>Kısa Yollar</h4>
                        <ul>
                            <li><a href="">CV</a></li>
                            
                        </ul>
                    </div>
                    <div class="footer-col" id="social">
                        <h4>Sosyal Medya</h4>
                        <div class="social-links" id="links">
                            <a href="#"><i class="fab fa-twitter"></i></a>
                            <a href="#"><i class="fab fa-instagram"></i></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="copy">
                <li> Copyright &copy;  2023 Tüm hakları saklıdır. </li>
            </div>
        </footer>




        <!-- Script -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>