
@model EntityLayer.Concrete.Blog
@{
    ViewData["Title"] = "AuthorAddUpdate";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<form class="forms-sample" method="post">
    <div class="form-group">
        @Html.HiddenFor(x => x.BlogID)
            <label for="exampleInputName1">Blog Başlığı</label>
            <input type="text" class="form-control" id="exampleInputName1" placeholder="Lütfen Başlık Giriniz" asp-for="BlogTıtle">
        </div>
        <div class="form-group">
            @Html.Label("Kategori ")
            @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.s, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label for="exampleInputName1">Resim Yolu</label>
            <input type="text" class="form-control" id="exampleInputName1" placeholder="Lütfen Resim Yolu  Giriniz" asp-for="BlogImage">
        </div>
        <div class="form-group">
            <label for="exampleInputName1">Tarih</label>
            <input type="date" class="form-control" id="exampleInputName1" placeholder="Lütfen Tarih Giriniz" asp-for="BlogTime">
        </div>
        <div class="form-group">
            @Html.Label("Yazar Adı")
            @Html.DropDownListFor(x => x.AuthorID, (List<SelectListItem>)ViewBag.v, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label for="exampleTextarea1">Açıklama</label>
            <textarea class="form-control" id="exampleTextarea1" rows="4" placeholder="Lütfen Açıklama Giriniz" asp-for="BlogContent"></textarea>
        </div>
        <button type="submit" class="btn btn-outline-primary">Kaydet</button>
        <button class="btn btn-light">Geri Dön</button>
</form>

