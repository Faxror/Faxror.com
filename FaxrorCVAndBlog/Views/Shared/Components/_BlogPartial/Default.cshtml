@using PagedList 
@using PagedList.Mvc
@using EntityLayer.Concrete
@model List<Blog>

<div class="site-section">
    <div class="container">
        <div class="row mb-5">
            <div class="col-12">
                <h2>Son Yazılar</h2>
            </div>
        </div>
        <div class="row">
       @foreach (var item in Model)
       {
            <div class="col-lg-4 mb-4">
                <div class="entry2">
                    <a href="/Blog/BlogDetails/@item.BlogID"><img src="@item.BlogImage" alt="Image" class="img-fluid rounded"></a>
                    <div class="excerpt">
                        <span class="post-category text-white bg-secondary mb-3">Yazılım</span>

                        <h2><a href="single.html">@item.BlogTıtle .</a></h2>
                        <div class="post-meta align-items-center text-left clearfix">
                            <figure class="author-figure mb-0 mr-3 float-left"><img src="~/miniblog/images/person_1.jpg" alt="Image" class="img-fluid"></figure>
                            <span class="d-inline-block mt-1">By <a href="#">Deniz</a></span>
                            <span>&nbsp;-&nbsp; @(((DateTime)item.BlogTime).ToString("dd-MMM-yyy"))</span>
                        </div>

                        <p>@item.BlogContent</p>
                        <p><a href="#">Devamını Oku</a></p>
                    </div>
                </div>
            </div>
       }
        </div>
        
       
    </div>
</div>

