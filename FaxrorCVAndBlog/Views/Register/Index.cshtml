@model UserRegisterViewModel                             

@{
    Layout = null;
}

﻿

<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>YAZ Blog | Kayıt ol</title>

    <link href="~/loginandregister/Content/bootstrap.min.css" rel="stylesheet">
    <link href="~/loginandregister/Fonts/font-awesome/css/font-awesome.css" rel="stylesheet">

    <link href="~/loginandregister/Content/animate.css" rel="stylesheet">
    <link href="~/loginandregister/Content/style.css" rel="stylesheet">

</head>

<body class="gray-bg">

    <div class="middle-box text-center loginscreen   animated fadeInDown">
        <div>
            <div>

                <h1 class="logo-name">Blog</h1>

            </div>
            <h3>Kayıt ol</h3>
            <p>Kayıt olmak için lütfen tüm başlukları doldurunuz.</p>
            <form class="m-t" role="form" asp-action="Index">
                <div class="form-group">
                    <span class="text-danger" asp-validation-for="@Model.NameSurname"> </span>
                    <input type="text" class="form-control" placeholder="Ad ve Soyadınız" asp-for="@Model.NameSurname" required="">
                </div>
                <div class="form-group">
                    <span class="text-danger" asp-validation-for="@Model.UserName"> </span>
                    <input type="text" class="form-control" placeholder="Kullanıcı Adınız" asp-for="@Model.UserName" required="">
                </div>
                <div class="form-group">
                    <span class="text-danger" asp-validation-for="@Model.Mail"> </span>
                    <input type="email" class="form-control" placeholder="Mail" asp-for="@Model.Mail" required="">
                </div>
                <div class="form-group">
                    <span class="text-danger" asp-validation-for="@Model.Password"> </span>
                    <input type="password" class="form-control" placeholder="Şifreniz" asp-for="@Model.Password" required="">
                </div>
                <div class="form-group">
                    <span class="text-danger" asp-validation-for="@Model.ConfirmPassword"> </span>
                    <input type="password" class="form-control" placeholder="Şifre Tekrarı" asp-for="@Model.ConfirmPassword" required="">
                </div>
                <div class="form-group">
                    <div class="checkbox"><label> <input type="checkbox"><i></i> Gizlilik ve Şartları kabul ediyorum. </label></div>
                </div>
                <button type="submit" class="btn btn-primary block full-width m-b">Kayıt ol</button>

                <p class="text-muted text-center"><small>zaten bir hesabın varmı?</small></p>
                <a class="btn btn-sm btn-white btn-block" href="/Login/AuthorLogin/">Login</a>
                
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>

            </form>
            <p class="m-t"> <small>Tüm Hakları saklıdır &copy; @DateTime.Now.Year</small> </p>
        </div>
    </div>
</body>

</html>

