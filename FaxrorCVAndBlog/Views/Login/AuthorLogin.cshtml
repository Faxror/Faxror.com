@model UserLoginViewModel


@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Yaz Blog | Giriş Yap</title>

    <link href="~/loginandregister/Content/bootstrap.min.css" rel="stylesheet">
    <link href="~/loginandregister/Fonts/font-awesome/css/font-awesome.css" rel="stylesheet">

    <link href="~/loginandregister/Content/animate.css" rel="stylesheet">
    <link href="~/loginandregister/Content/style.css" rel="stylesheet">

</head>

<body class="gray-bg">

    <div class="middle-box text-center loginscreen  animated fadeInDown">
        <div>
            <div>

                <h1 class="logo-name">YB</h1>

            </div>
            <h3>Hoşgeldiniz, YB</h3>
          
            <p>Bilgilerinizi girerek giriş yapınız.</p>
            <form class="m-t" role="form" asp-controller="Blog" asp-action="AuthorBlogList">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Username" asp-for="@Model.UserName">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="Password" asp-for="@Model.Password" >
                </div>
                <button type="submit" class="btn btn-primary block full-width m-b" href="/Blog/AuthorBlogList/">Giriş Yap</button>

               
                <p class="text-muted text-center"><small>Henüz bir hesabınız yokmu?</small></p>
                <a class="btn btn-sm btn-white btn-block" href="/Register/Index/">Hesap Oluştur</a>
            </form>
            <p class="m-t"> <small>Yaz Blog | Tüm Hakları Saklıdır. &copy; @DateTime.Now.Year</small> </p>
        </div>
    </div>

</body>

</html>


